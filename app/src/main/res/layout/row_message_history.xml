<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_half_vertical_margin"
        android:layout_marginRight="@dimen/activity_half_vertical_margin"
        android:foreground="@drawable/card_foreground"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_message_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:ellipsize="end"
                android:textColor="@color/text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_message_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_message_status"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/status_icon"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_success"
                android:textSize="13sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>